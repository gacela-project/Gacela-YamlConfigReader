{
    "name": "gacela-project/gacela-yaml-config-reader",
    "description": "Load yaml/yml files into Gacela",
    "type": "library",
    "keywords": ["php","modular","kernel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Maria Valera Reales",
            "email": "chemaclass@outlook.es"
        },
        {
            "name": "Jesus Valera Reales",
            "email": "jesus1902@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "gacela-project/gacela": "*",
        "symfony/yaml": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "psalm/plugin-phpunit": "^0.18",
        "symfony/var-dumper": "^5.4",
        "vimeo/psalm": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Gacela\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GacelaTest\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "ctal": [
            "@static-clear-cache",
            "@csfix",
            "@test-all"
        ],
        "test-all": [
            "@quality",
            "@phpunit"
        ],
        "quality": [
            "@csrun",
            "@psalm",
            "@phpstan"
        ],
        "phpunit": [
            "@test-unit",
            "@test-feature"
        ],
        "static-clear-cache": [
            "vendor/bin/psalm --clear-cache",
            "vendor/bin/phpstan clear-result-cache"
        ],
        "test-unit": "./vendor/bin/phpunit --testsuite=unit",
        "test-feature": "./vendor/bin/phpunit --testsuite=feature",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --testsuite=unit,feature --coverage-html=coverage",
        "psalm": "./vendor/bin/psalm",
        "phpstan": "./vendor/bin/phpstan analyze -c phpstan.neon src",
        "csfix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "csrun": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run"
    }
}
